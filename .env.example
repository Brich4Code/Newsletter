# Database (Supabase)
# Use SUPABASE_DATA_STORAGE for Replit Secrets, or DATABASE_URL as fallback
# For Supabase Transaction Pooler (recommended for Replit):
SUPABASE_DATA_STORAGE=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# Legacy fallback:
DATABASE_URL=postgresql://username:password@host:port/database

# Google AI API
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Google Service Account (for Google Docs API)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_DOCS_FOLDER_ID=your_google_drive_folder_id

# Newsletter Editor
EDITOR_EMAIL=your-email@example.com

# Agent Configuration
RESEARCH_INTERVAL_HOURS=6

# Optional: Image Generation
# IMAGEN_API_KEY=your_imagen_key
# NANO_BANANA_API_KEY=your_nano_banana_key
